<div class="bg-light">
    <div class=" pt-4 wrapper">
        <div class="grid">
            <% @missions.each do |mission| %>
                <%= link_to mission_path(mission), :action => 'go' do %>
                    <div class="card-index">
                        <%= cl_image_tag mission.photo_category.key %>
                        <div class="card-index-members">
                            <div>
                                <p id="title"><%= mission.category.name %></p>
                                <p id="desc"><%= mission.description %> </p>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>


        <div id="map"
            style="width: 50%; height: 750px; border-radius: 10px; margin: 2em;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
        </div>
    </div>
</div>
