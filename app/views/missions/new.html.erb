<div class="container m-auto my-4 p-4 shadow">
  <div class="w-50">
    <h2>Création d'une nouvelle demande d'aide </h2>
    <%= simple_form_for [ @mission ] do |f| %>
      <div class="field">
        <%= f.label :description, label: "Description" %>
        <%= f.text_area :description, class: "form-control", label: "Description"%>
      </div>

      <!-- <div class="field">
        <%= f.input :started_ad, as: :datetime %>
      </div> -->
      <p>
      </p>
      <div class="calendar" style="display: flex">
      <div class="field" style="margin-right:15px">
        <%= f.input :started_ad, as: :string, class: "form-control", label: "Début", input_html: { id: "flatpickr", class: "dis" } %>
      </div>

      <!--<div class="field">
        <%= f.input :finished_at, as: :datetime %>
      </div> -->

      <div class="field">
        <%= f.input :finished_at, as: :string, class: "form-control", label: "Fin", input_html: { id: "flatpickr", class: "dis" } %>
      </div>
      </div>
      <div class="field">
        <%= f.input :address, label: "Adresse"%>
      </div>
      <div class="field">
        <%= f.association :category, collection: Category.all, as: :radio_buttons, label: "Choisir votre catégorie" %>
      </div>
      <div class="actions">
        <%= f.submit "Créer", class: "button btn-flat"%>
      </div>
    <% end %>
  </div>
</div>
