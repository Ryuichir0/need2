<div class="container">
  <div class="user-card">
    <div>
    <!---->
    <%= cl_image_tag @user.avatar.key, :class => "avatar-bordered"%>
    </div>
    <div class="col-md-8">
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-3">
                          <i class=" mb-0 fas fa-users"></i>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <h5><%= @user.pseudo %></h5>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <i class=" mb-0 fas fa-user"></i>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <h5><%= @user.first_name %></h5>
                        </div>
                      </div>
                    <hr>
                     <div class="row">
                        <div class="col-sm-3">
                          <i class="mb-0 fas fa-comments"></i>
                        </div>
                          <div class="d-flex vertical-items-center col-sm-9 text-secondary">
                        <% if @user.review_for_helpee != [] %>
                          <h5 style="padding-top: 8px; padding-right: 5px;">Helpee : </span> <% @user.rating_as_helpee.to_i.times do |star| %></h5>
                            <i id="<%= star + 1 %>" class="review-rating fas fa-star"></i>
                          <% end %>
                        <% else %>
                          <h5 style="padding-top: 8px; padding-right: 5px;">Helpee : pas encore de note </h5>
                        <% end %>
                          </div>
                        </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <i class="mb-0 fas fa-comments"></i>
                        </div>
                          <div class="d-flex vertical-items-center col-sm-9 text-secondary">
                        <% if @user.review_for_helper != [] %>
                          <h5 style="padding-top: 8px; padding-right: 5px;">Helper : </span> <% @user.rating_as_helper.to_i.times do |star| %></h5>
                            <i id="<%= star + 1 %>" class="review-rating fas fa-star"></i>
                          <% end %>
                        <% else %>
                          <h5 style="padding-top: 8px; padding-right: 5px;">Helper : pas encore de note </h5>
                        <% end %>
                          </div>
                        </div>
                     <hr>
                       <div class="row">
                        <div class="col-sm-3">
                          <i class="mb-0 fas fa-birthday-cake"></i>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <h5> Membre depuis le : <%= Date.parse(@user.created_at.to_s).strftime("%d/%m/%Y") %></h5>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
          </div>
      </div>
        </div>
</div>
<div class="d-flex">
	<div class="comments-container">
	<div class="content-show-description">
  <h1>Commentaires</h1>
      <%if @user.helps_as_helpee != [] || @user.helps_as_helper != [] %>
          <div class="card-product-infos-review">
              <% @user.helps_as_helpee.where(status: "confirmed").last(3).each do |help| %>
                <div class="d-flex flash flash-success fade show mb-2 ">
                  <%= cl_image_tag help.user.avatar.key, class: "avatar-large", alt: "avatar-large" %>
                  <div style="mt-2 pt-2 height: 20px;">
                    <h5 class="pt-1 pr-2"><span class="pt-2"><%= help.user.first_name.capitalize %></span><span class="pl-2" style="color: grey; font-size: 16px; font-style: oblique 43deg;"><%=(help.mission.updated_at).strftime("Le %d/%m/%Y")%></span></h5>
                    <h6><i class="pr-2 fas fa-quote-left"></i><%= help.helper_review %><i class="pl-2 fas fa-quote-right"></i><h6>
                  </div>
                </div>
              <% end %>
        <% else %>
          <h4>Aucun commentaire disponnible </h4>
        <% end %>
          </div>
        </div>
        </div>
 </div> 