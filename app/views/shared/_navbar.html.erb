<div class="<%= action_name%> navbar navbar-expand-sm navbar-light navbar-lewagon sticky">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "biglogo.jpg" %>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="pr-2 d-flex justify-content-between align-items-center navbar-nav mr-3">
      <% if user_signed_in? %>
            <%= link_to "Missions", missions_path, class: "dropdown-item1"%><p style="color: white"></p>
            <%= link_to "Créer une demande", new_mission_path, class: "dropdown-item1"%>
        <li class="nav-item active">
        </li>
        <li class="nav-item">
          <%= current_user.pseudo%>
        </li>
        <li class="nav-item dropdown">

          <%= cl_image_tag current_user.avatar.key, class: "avatar-large", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mon profil", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Éditer mon profil", edit_user_registration_path, class: "dropdown-item" %>
            <% link_to "Mes messages", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
        <%= link_to "Se connecter", new_user_session_path, class: "btn btn-flat" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>